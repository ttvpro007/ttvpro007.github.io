      "options": [
        "Collaboration",
        "Job Opportunity",
        "Freelance Work",
        "Question",
        "Just Saying Hi"
      ],
      "required": true
    },

    {
      "id": "details",
      "label": "Quest Details",
      "type": "textarea",
      "placeholder": "Describe the mission you have in mind...",
      "required": true
    }
